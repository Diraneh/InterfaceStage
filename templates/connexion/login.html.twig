{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Connexion</h1>

  
    
</div>

<div class="container">
<div class="row">
 <div class="col-lg-10 col-xl-9 mx-auto">
 <div class="card card-signin flex-row my-5">
 <div class="card-body">

<form action="{{path('affichages')}}"  method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
   <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Adress email" required name="_username" class="form_controle">
  
  </div>
  <div class="form-group">
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required name="_password" class="form_controle">
  </div>
  
<button type="submit" class="btn btn-lg btn-facebook btn-block">Connexion</button>

</form>

</div>
</div>
</div>

{% endblock %}
